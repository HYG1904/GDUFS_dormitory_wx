/* pages/login/login.wxss */
.title{
  display: block;
  font-size: 48rpx;
  padding-left: 30rpx;
  padding-top: 48rpx;
  padding-bottom: 65rpx;
  /* margin:55rpx auto 100rpx auto; */
}
.input-box{
  margin-left: 30rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #efefef;
  font-size: 28rpx;
  color:#333;
  overflow: auto;
}
.login-label{
  float: left;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  font-size: 28rpx;
  height: 26rpx;
  line-height: 26rpx;
}
.login-input{
  float: left;
  height: 86rpx;
  padding-left: 50rpx;
}
.remeber-btn{
  margin-left: 30rpx; 
}
.remeber-btn checkbox{
  display: none;
}
.login-checkbox{
  /* display: inline-block; */
  position: relative;
  float:left;
  border-radius: 50%;
  width:24rpx;
  height: 24rpx;
  margin-top: 32rpx;
  border:#efefef solid 2rpx;
}
.login-checkbox-inner{
  position: absolute;
  top:4rpx;
  left: 4rpx;
  display: inline-block;
  width:16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #3080EE;
  opacity: 0;
}
.checked .login-checkbox{
  border:#3080EE solid 2rpx;
}
.checked .login-label-2{
  color: #3080EE;
}
.checked .login-checkbox-inner{
  opacity: 1;
}
.login-label-2{
  float: left;
  height: 102rpx;
  line-height: 90rpx;
  margin-left: 18rpx;
  margin-right: 40rpx;
  font-size: 28rpx;
}
.login-btn{
  width:690rpx;
  height: 88rpx;
  font-size: 32rpx;
  color:#fff; 
  background-color: #3080EE;
}