<!--pages/dormitory_room/dormitory_room.wxml-->
<wxs src="./dormitory_room.wxs" module="tools" />

<view class='room-title'>
  <text>南苑13栋356</text>
</view>
<view class='room-main'>
  <view class='students'>
    <view class='student' wx:for="{{students}}">
      <view class='title'>
        <view class='left'>
          <view>
            <text class='name'>莫广智</text>
          </view>
          <view>
            <text class='sex'>男</text>
            <text class='grade'>2015级</text>
          </view>
        </view>
        <view class='right'>
          <button size='mini' class='{{tools.buttonClass(item.isdormitory)}}'>{{tools.buttonText(item.isdormitory)}}</button>
        </view>
      </view>
      <view class='item'>
        <text class='key'>学院</text>
        <text class='value'>{{item.college}}</text>
      </view>
      <view class='item'>
        <text class='key'>学号</text>
        <text class='value'>{{item.id}}</text>
      </view>
      <view class='item'>
        <text class='key'>联系方式</text>
        <text class='value'>{{item.phonenumber}}</text>
      </view>
      <view class='item'>
        <text class='key'>辅导员</text>
        <text class='value'>{{item.counselor}}</text>
      </view>
      <view class='item'>
        <text class='key'>辅导员电话</text>
        <text class='value'>{{item.counselor_phonenumber}}</text>
      </view>
    </view>
  </view>
  <view class='records'></view>
</view>
